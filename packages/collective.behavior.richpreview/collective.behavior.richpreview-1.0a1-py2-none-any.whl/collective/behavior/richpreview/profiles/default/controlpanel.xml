    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.behavior.richpreview"
    purge="False">
    <configlet title="Rich Link Preview"
        action_id="richpreview"
        appId="collective.behavior.richpreview"
        category="Products"
        condition_expr=""
