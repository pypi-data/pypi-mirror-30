#!/bin/sh
#  Run the auto-tools
#

# blow away the autogenerated stuff
rm -rf 	Makefile.in \
	aclocal.m4 \
	autom4te.cache \
	compile \
	config.guess \
	config.h.in \
	config.sub \
	configure \
	depcomp \
	doc/Makefile.in \
	examples/Makefile.in \
	install-sh \
	ltmain.sh \
	missing \
	src/Makefile.in


# re-run the configurator and replace what is needed if not cleaning.
if test "x$1" != "x--clean"; then
  autoreconf --install
fi
