{
  "name": "salesforce-alm",
  "version": "42.4.0",
  "description": "This package contains tools, and APIs, for an improved salesforce.com developer experience.",
  "main": "dist/index.js",
  "directories": {
    "lib": "./dist/lib"
  },
  "dependencies": {
    "adm-zip": "0.4.7",
    "archiver": "1.0.1",
    "bluebird": "3.4.6",
    "body-parser": "1.15.0",
    "bunyan-sfdx-no-dtrace": "1.8.2",
    "cli-spinner": "0.2.5",
    "csv-parse": "1.1.2",
    "express": "4.13.4",
    "faye": "1.1.2",
    "fs-extra": "4.0.1",
    "gitignore-parser": "0.0.2",
    "glob": "7.0.3",
    "heroku-cli-util": "6.0.16",
    "jsen": "0.6.4",
    "jsforce": "1.8.0",
    "jsonwebtoken": "7.0.0",
    "klaw": "2.1.0",
    "lodash": "4.17.4",
    "mime": "1.3.6",
    "mkdirp": "0.5.1",
    "moment": "2.13.0",
    "node-constants": "0.0.2",
    "open": "0.0.5",
    "optional-js": "1.1.2",
    "pluralize": "3.0.0",
    "process-promises": "1.0.0",
    "readline-sync": "1.4.4",
    "replace": "0.3.0",
    "request": "2.79.0",
    "selenium-standalone": "6.6.0",
    "webdriverio": "4.1.0",
    "xml2js": "0.4.17",
    "xmldom": "0.1.22"
  },
  "scripts": {
    "compile": "gulp compile",
    "eslint": "./node_modules/eslint/bin/eslint.js src/commands src/lib src/test src/index.js",
    "eslint-with-style": "./node_modules/eslint/bin/eslint.js -f checkstyle -o ./checkstyle.xml src/commands src/lib src/test src/index.js",
    "eslint-with-style-windows": "node node_modules\\eslint\\bin\\eslint.js -f checkstyle -o checkstyle.xml src/commands src/lib src/test src/index.js",
    "lint": "npm run eslint",
    "precommit": "npm run lint",
    "test": "npm run lint && gulp && mocha --recursive dist/test/unit",
    "unit": "gulp && mocha --recursive -t 240000 dist/test/unit/ -R xunit-file",
    "integration": "gulp && mocha --recursive dist/test/integration -t 240000 -R xunit-file",
    "coverage": "gulp && ./node_modules/istanbul/lib/cli.js cover --report cobertura _mocha -- -t 1000000 --recursive dist/test/integration -R xunit-file",
    "coverage-unit": "gulp && ./node_modules/istanbul/lib/cli.js cover --report cobertura _mocha -- -t 240000 --recursive dist/test/unit -R xunit-file",
    "coverage-unit-html": "gulp && ./node_modules/istanbul/lib/cli.js cover --report html _mocha -- -t 240000 --recursive dist/test/unit -R xunit-file",
    "cucumber": "gulp && cucumber-js dist/test/features",
    "cucumber-ci": "gulp && cucumber-js dist/test/features --format=json | cucumber-junit > cucumber-xunit.xml",
    "coverage-report": "./node_modules/istanbul/lib/cli.js report --report html json-summary",
    "q3-smoke-tests": "gulp && mocha dist/test/e2e/q3SmoketestCli.js -t 240000 -b -R xunit-file"
  },
  "keywords": [
    "force.com",
    "salesforce",
    "salesforce-dx",
    "salesforcedx",
    "apex",
    "visualforce",
    "lightning",
    "heroku-plugin",
    "heroku"
  ],
  "author": "Tim Noonan",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/chai": "3.4.34",
    "@types/chai-as-promised": "0.0.30",
    "@types/csv-parse": "1.1.5",
    "@types/mocha": "2.2.32",
    "@types/node": "6.0.45",
    "@types/pluralize": "0.0.27",
    "@types/sinon": "1.16.31",
    "@types/xml2js": "0.0.28",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-fs": "1.0.0",
    "chai-string": "1.2.0",
    "chance": "1.0.4",
    "child-process-promise": "2.2.0",
    "csvjson": "2.2.0",
    "cucumber": "2.0.0-rc.2",
    "cucumber-junit": "1.6.0",
    "eslint": "3.2.2",
    "eslint-config-airbnb-base": "5.0.1",
    "eslint-plugin-import": "1.13.0",
    "gulp": "3.9.1",
    "gulp-debug": "3.1.0",
    "gulp-env": "0.4.0",
    "gulp-inject": "4.2.0",
    "gulp-istanbul": "1.1.2",
    "gulp-mocha": "4.3.1",
    "gulp-sourcemaps": "2.6.0",
    "gulp-typescript": "3.2.1",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "mocha": "3.5.0",
    "ncp": "2.0.0",
    "os-locale": "1.4.0",
    "salesforcedx-shell-utils": "1.0.11",
    "sinon": "1.17.4",
    "typescript": "2.4.0",
    "uniqid": "4.1.1",
    "xunit-file": "1.0.0"
  }
}
