---
- name: "[setting adapter variables]"
  set_fact:
    dotfile_folders: "{{ freckles_profile_folders }}"
    dotfiles_unstow: "{{ freckles_global_vars.unstow | default(omit) }}"
    dotfiles_no_stow: "{{ freckles_global_vars.no_stow | default(omit) }}"
    dotfiles_no_package_install: "{{ freckles_global_vars.no_package_install | default(omit) }}"
    dotfiles_no_folder_install: "{{ freckles_global_vars.no_folder_install | default(omit) }}"
    dotfiles_edit_rc_files: "{{ freckles_global_vars.edit_rc_files | default(false) }}"

- name: "starting dotfile adapter execution"
  include_role:
    name: "freckles-io.dotfiles"
