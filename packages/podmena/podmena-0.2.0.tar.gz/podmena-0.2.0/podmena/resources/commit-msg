#!/usr/bin/env python3
import os
import sys
import yaml
import random

curdir = os.path.dirname(os.path.realpath(__file__))
with open(os.path.join(curdir, 'database.yml')) as f:
    emoji = yaml.load(f.read())

with open(sys.argv[1]) as f:
    text = f.read()

with open(sys.argv[1], 'w') as f:
    f.write('{} :{}:'.format(text.strip(), random.choice(emoji)))
