{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Bundle Metadata",
    "description": "Uploaded metadata of a brood bundle",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "sha256": {
            "description": "The SHA256 hash of the bundle file.",
            "type": "string"
        },
        "bundle_name": {
            "description": "The name of the bundle.",
            "type": "string"
        },
        "bundle_version": {
            "description": "The version of the bundle.",
            "type": "string"
        },
        "bundle_build": {
            "description": "The build of the bundle.",
            "type": "integer"
        }
    },
    "required": ["sha256", "bundle_name", "bundle_version", "bundle_build"]
}
