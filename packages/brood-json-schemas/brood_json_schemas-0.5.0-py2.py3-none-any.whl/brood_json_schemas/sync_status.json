{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Application Definition",
    "description": "App YAML schema",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "event": {
            "description": "The sync event name",
            "type": "string"
        },
        "values": {
            "description": "Values associated with the sync event",
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "type": {
                    "description": "The type of sync performed",
                    "type": "string"
                }
            },
            "required": ["type"]
        }
    },
    "required": ["event", "values"]
}
