{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Application Definition",
    "description": "App YAML schema",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "id": {
            "description": "The ID of the application",
            "type": "string"
        },
        "name": {
            "description": "The name of the application",
            "type": "string"
        },
        "platform": {
            "description": "The platform for which the app is built of the application",
            "type": "string"
        },
        "version": {
            "description": "The version of the application",
            "type": "string"
        },
        "build": {
            "description": "The build number of the application",
            "type": "integer"
        },
        "python_tag": {
            "description": "The python compatibility tag of the application of the application",
            "type": "string"
        }
    },
    "required": ["id", "name", "platform", "version", "build", "python_tag"]
}
