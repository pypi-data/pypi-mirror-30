vbell off
altscreen on
startup_message off
defscrollback 1000

hardstatus alwayslastline
hardstatus string '%{= kW}%-Lw%{= KW}%50>%n%f* %t%{= kW}%+Lw%< %{= kG}%-=ardj@%H:%l | %d.%m %c:%s%{-}'

screen -t "logs" ardj log
screen -t "icecast" ardj loop icecast
screen -t "ezstream" ardj loop ezstream
screen -t "web-server" ardj loop web-server
screen -t "worker" ardj loop worker
