# Website
server {
    listen 443 ssl;
    server_name modislock.local;
    root /var/www/modislock;
    ssl_certificate /var/www/modislock.cert;
    ssl_certificate_key /var/www/modislock.key;

    location / {
        proxy_pass       http://127.0.0.1:8888/;
        proxy_redirect   off;
        proxy_set_header Host            $host;
        proxy_set_header X-Real-IP       $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        root /var/www/modislock;
        expires 15d;
    }

    location /pages {
        root /var/www/modislock;
        expires 15d;
    }
}

# 301 redirect
server {
    listen       80;
    server_name  modislock.local;
    return       301 https://$host$request_uri;
}
