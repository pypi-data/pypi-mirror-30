# Website
server {
    listen 443 ssl;
    server_name demo.modis.io;
    root /var/www/modislock;
    ssl_certificate /etc/letsencrypt/live/demo.modis.io/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/demo.modis.io/privkey.pem; # managed by Certbot

    location / {
        proxy_pass       http://127.0.0.1:8888/;
        proxy_redirect   off;
        proxy_set_header Host            $host;
        proxy_set_header X-Real-IP       $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        root /var/www/modislock;
        expires 15d;
    }

    location /pages {
        root /var/www/modislock;
        expires 15d;
    }
}

# 301 redirect
server {
    listen       80;
    server_name  demo.modis.io;
    return       301 https://$host$request_uri;
}
