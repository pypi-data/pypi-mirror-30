<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <processor>

    <label xml:lang="en">Storage cleanup</label>
    <label xml:lang="fr">Nettoyage d'espace de stockage</label>

    <description xml:lang="en">
      Remove some files from a storage.
    </description>
    <description xml:lang="fr">
       Supprime certains fichiers d'espace de stockage.
    </description>

    <module>publiforge.lib.processor.generator</module>

    <variables>
      <group>
        <label xml:lang="en">Cleaning</label>
        <label xml:lang="fr">Nettoyage</label>

        <var name="storage" type="string">
          <label xml:lang="en">Storage ID</label>
          <label xml:lang="fr">ID de l'espace de stockage</label>
        </var>

        <var name="ttl" type="integer">
          <default>3600</default>
          <label xml:lang="en">Time to Live</label>
          <label xml:lang="fr">Temps de vie (TTL)</label>
          <description xml:lang="en">
            Time to live for files selected for deletion.
          </description>
          <description xml:lang="fr">
            Temps de vie pour les fichiers sélectionnés pour la suppression.
          </description>
        </var>
      </group>
    </variables>
  </processor>
</publiforge>
