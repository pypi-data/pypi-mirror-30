<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <processor>

    <label xml:lang="en">Publidoc XML to XHTML</label>
    <label xml:lang="fr">XML Publidoc vers XHTML</label>

    <description xml:lang="en">
      Convert a Publidoc XML document into XHTML 1.1 files with images and
      sounds.
    </description>
    <description xml:lang="fr">
      Convertit un document XML Publidoc en fichiers XHTML 1.1 avec images et
      sons.
    </description>

    <module>publiforge.lib.processor.leprisme</module>

    <ancestors>
      <ancestor>Publiset2Publidoc</ancestor>
    </ancestors>

    <variables>
      <group-file>Variables/publidoc2xhtml_module.pfvar.xml</group-file>
      <group-file>Variables/publidoc2xhtml_image.pfvar.xml</group-file>
      <group-file>Variables/publidoc2xhtml_multimedia.pfvar.xml</group-file>
      <group-file>Variables/publidoc2xhtml_misc.pfvar.xml</group-file>
      <group-file>Variables/publidoc2xhtml_html.pfvar.xml</group-file>
      <group-file>Variables/publidoc2xhtml.pfvar.xml</group-file>
    </variables>

    <output>Result/XHtml</output>

  </processor>
</publiforge>
