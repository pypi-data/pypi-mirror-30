<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Quiz</label>
      <label xml:lang="fr">Quiz</label>

      <var name="max_retry" type="select" visible="true">
        <default>1</default>
        <option>0</option>
        <option>1</option>
        <option>2</option>
        <label xml:lang="en">Maximun number of retries</label>
        <label xml:lang="fr">Nombre maximum d'essais</label>
      </var>

      <var name="base_score" type="integer" visible="true">
        <default>0</default>
        <label xml:lang="en">Base for the score computing</label>
        <label xml:lang="fr">Base pour le calcul du score</label>
        <description xml:lang="en">0 = standard score</description>
        <description xml:lang="fr">0 = score standard</description>
      </var>

      <var name="success_threshold" type="select" visible="true">
        <default>1</default>
        <option value="1">100%</option>
        <option value=".9">90%</option>
        <option value=".8">80%</option>
        <option value=".7">70%</option>
        <option value=".6">60%</option>
        <option value=".5">50%</option>
        <option value=".4">40%</option>
        <option value=".3">30%</option>
        <option value=".2">20%</option>
        <option value=".1">10%</option>
        <label xml:lang="en">Threshold for success</label>
        <label xml:lang="fr">Seuil pour la réussite</label>
      </var>
      
      <var name="matching_link" type="boolean">
        <default>true</default>
        <label xml:lang="en">Activation of matching with links</label>
        <label xml:lang="fr">Activation du mode relier des appariements</label>
      </var>  

      <var name="correct_line" type="boolean">
        <default>true</default>
        <label xml:lang="en">Activation of Correct-line</label>
        <label xml:lang="fr">Activation des Correct-line</label>
      </var>

      <var name="wordsearch" type="boolean">
        <default>true</default>
        <label xml:lang="en">Activation of Wordsearch</label>
        <label xml:lang="fr">Activation des Mots mêlés</label>
      </var>

      <var name="flashcard" type="boolean">
        <default>true</default>
        <label xml:lang="en">Activation of Flashcard</label>
        <label xml:lang="fr">Activation des cartes mémoire</label>
      </var>

      <var name="coloring" type="boolean">
        <default>true</default>
        <label xml:lang="en">Activation of Coloring</label>
        <label xml:lang="fr">Activation des coloriages</label>
      </var>

      <var name="memory" type="boolean">
        <default>true</default>
        <label xml:lang="en">Activation of Memory</label>
        <label xml:lang="fr">Activation des Memory</label>
      </var>

      <var name="mode_choices_check" type="select" visible="true">
        <default>check</default>
        <option>check</option>
        <option>radio</option>
        <label xml:lang="en">Default mode for MCQ quiz</label>
        <label xml:lang="fr">Mode par défaut pour les quiz QCM</label>
      </var>

      <var name="mode_blanks_choices" type="select" visible="true">
        <default>combobox</default>
        <option>combobox</option>
        <option>pointing</option>
        <label xml:lang="en">Default mode for Blanks Choices quiz</label>
        <label xml:lang="fr">Mode par défaut pour les exercices à trous avec questionnaire</label>
      </var>

      <var name="mode_blanks_select" type="select" visible="true">
        <default>dragndrop</default>
        <option>dragndrop</option>
        <option>combobox</option>
        <label xml:lang="en">Default mode for Blanks Select quiz</label>
        <label xml:lang="fr">Mode par défaut pour les exercices à trous avec suggestion</label>
      </var>

      <var name="mode_categories" type="select" visible="true">
        <default>basket</default>
        <option>basket</option>
        <option>float</option>
        <option>color</option>
        <option>grid</option>
        <label xml:lang="en">Default mode for categories quiz</label>
        <label xml:lang="fr">Mode par défaut pour les quiz de catégories</label>
      </var>

      <var name="mode_matching" type="select" visible="true">
        <default>dragndrop</default>
        <option>dragndrop</option>
        <option>link</option>
        <label xml:lang="en">Default mode for matching quiz</label>
        <label xml:lang="fr">Mode par défaut pour les quiz d'appariement</label>
      </var>

      <var name="context_ttl" type="select" visible="true">
        <default>-1</default>
        <option value="-1">no context</option>
        <option value="0">session</option>
        <option value="86400">1 day</option>
        <option value="2678400">1 month</option>
        <option value="31536000">1 year</option>
        <label xml:lang="en">Time to save context</label>
        <label xml:lang="fr">Temps de sauvegarde du contexte</label>
      </var>

      <var name="context_key" type="string">
        <default>session16</default>
        <label xml:lang="en">Context key identification</label>
        <label xml:lang="fr">Clé d'identification du contexte</label>
      </var>
    </group>
  </variables>
</publiforge>
