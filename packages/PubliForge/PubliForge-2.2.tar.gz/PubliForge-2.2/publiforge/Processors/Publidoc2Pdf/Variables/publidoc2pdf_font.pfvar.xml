<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Fonts</label>
      <label xml:lang="fr">Polices</label>
      <description xml:lang="en">
        A font description such as: family, size/spacing+variation, series, shape --
        Each section is optional except for main font. --
        family = Serif, Sans, Mono or Script --
        size/spacing+variation = for instance 10/11.5+0.8, variation is optional --
        series = m (medium), b (bold), bx (extra bold), sb (semi bold) or l (light) --
        shape = n (normal), it (italic), sc (small caps) or sl (slanted)
      </description>
      <description xml:lang="fr">
        Une description de la police telle que : famille, taille/interlignage+variation, collection, forme --
        Chaque section est optionnelle sauf pour la police principale. --
        famille = Serif, Sans, Mono ou Script --
        taille/interlignage+variation = par exemple 10/11.5, la variation est optionelle --
        collection = m (medium), b (gras), bx (très gras), sb (semi gras) ou l (léger) --
        forme = n (normal), it (italic), sc (small caps) ou sl (slanted)
      </description>

      <var name="font_main" type="regex" visible="true">
        <default>Serif, 11/13, m, n</default>
        <pattern>(Serif|Sans|Mono|Script), \d\d?(\.\d)?/\d\d?(\.\d)?(\+\d\d?(\.\d)?)?, (m|b|bx|sb|l), (n|it|sc|sl)</pattern>
        <label xml:lang="en">Main font</label>
        <label xml:lang="fr">Police principale</label>
      </var>

      <var name="font_header" type="regex" visible="true">
        <default>Sans, 10/12, ,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Header font</label>
        <label xml:lang="fr">Police d'en-tête</label>
      </var>

      <var name="font_folio" type="regex">
        <default>Sans, /, ,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Folio font</label>
        <label xml:lang="fr">Police de folio</label>
      </var>

      <var name="font_title1" type="regex">
        <default>Sans, 22/26, bx,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Part title font</label>
        <label xml:lang="fr">Police de titre de partie</label>
      </var>

      <var name="font_title2" type="regex">
        <default>Sans, 20/22, bx,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Chapter title font</label>
        <label xml:lang="fr">Police de titre de chapitre</label>
      </var>

      <var name="font_title3" type="regex">
        <default>Sans, 15/17, bx,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Section title font</label>
        <label xml:lang="fr">Police de titre de section</label>
      </var>

      <var name="font_title4" type="regex">
        <default>Sans, 12/14, bx,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Sub-section title font</label>
        <label xml:lang="fr">Police de titre de sous-section</label>
      </var>

      <var name="font_title5" type="regex">
        <default>Sans, 11/13, , it</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Sub-sub-section title font</label>
        <label xml:lang="fr">Police de titre de sous-sous-section</label>
      </var>

      <var name="font_note" type="regex">
        <default>Sans, 7.5/9, ,</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Foot note font</label>
        <label xml:lang="fr">Police de note de bas de page</label>
      </var>

      <var name="font_quote" type="regex">
        <default>, /, , it</default>
        <pattern>(Serif|Sans|Mono|Script)?, (\d\d?(\.\d)?)?/(\d\d?(\.\d)?(\+\d\d?(\.\d)?)?)?, (m|b|bx|sb|l)?, ?(n|it|sc|sl)?</pattern>
        <label xml:lang="en">Quotation font</label>
        <label xml:lang="fr">Police des citations</label>
      </var>
    </group>
  </variables>
</publiforge>
