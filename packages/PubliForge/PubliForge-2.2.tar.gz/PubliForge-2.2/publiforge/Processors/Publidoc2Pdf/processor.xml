<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <processor>

    <label xml:lang="en">Publidoc XML to PDF</label>
    <label xml:lang="fr">XML Publidoc vers PDF</label>

    <description xml:lang="en">
      Convert a Publidoc XML document into a PDF file via LaTeX.
    </description>
    <description xml:lang="fr">
      Convertit un document XML Publidoc en fichier PDF via LaTeX.
    </description>

    <module>publiforge.lib.processor.leprisme</module>

    <ancestors>
      <ancestor>Publiset2Publidoc</ancestor>
    </ancestors>

    <variables>
      <group-file>Variables/publidoc2pdf_module.pfvar.xml</group-file>
      <group-file>Variables/publidoc2pdf_dimension.pfvar.xml</group-file>
      <group-file>Variables/publidoc2pdf_layout.pfvar.xml</group-file>
      <group-file>Variables/publidoc2pdf_font.pfvar.xml</group-file>
      <group-file>Variables/publidoc2pdf_image.pfvar.xml</group-file>
      <group-file>Variables/publidoc2pdf_misc.pfvar.xml</group-file>
    </variables>

    <output>Result/Pdf</output>

  </processor>
</publiforge>
