<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <processor>

    <label xml:lang="en">Publidoc XML to Daisy</label>
    <label xml:lang="fr">XML Publidoc vers Daisy</label>

    <description xml:lang="en">
      Convert a Publidoc XML document into a DAISY Digital Talking Book
      (dtbook) XML document.
    </description>
    <description xml:lang="fr">
      Convertit un document XML Publidoc en un document XML DAISY Digital
      Talking Book (dtbook).
    </description>

    <module>publiforge.lib.processor.leprisme</module>

    <ancestors>
      <ancestor>DTBookValid</ancestor>
      <ancestor>Publiset2Publidoc</ancestor>
    </ancestors>

    <variables>
      <group-file>Variables/publidoc2dtbook_module.pfvar.xml</group-file>
      <group-file>Variables/publidoc2dtbook_image.pfvar.xml</group-file>
    </variables>

    <output>Result/Xml</output>

  </processor>
</publiforge>
