<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Image</label>
      <label xml:lang="fr">Image</label>

      <var name="img_dir" type="string" visible="true">
        <default>Images/</default>
        <label xml:lang="en">Default directory</label>
        <label xml:lang="fr">Répertoire par défaut</label>
      </var>

      <var name="img_ext" type="select" visible="true">
        <default>.png</default>
        <option value=".png">PNG</option>
        <option value=".jpg">JPEG</option>
        <option value=".gif">GIF</option>
        <label xml:lang="en">Default extension</label>
        <label xml:lang="fr">Extension par défaut</label>
      </var>
    </group>
    
  </variables>
</publiforge>
