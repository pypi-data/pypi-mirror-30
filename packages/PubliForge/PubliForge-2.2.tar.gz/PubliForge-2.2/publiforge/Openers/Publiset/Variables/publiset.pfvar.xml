<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <variables>

    <!-- =========================== Composition ========================== -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Head ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <group name="composition_head">
      <label xml:lang="en">Head</label>
      <label xml:lang="fr">En-tête</label>

      <!-- .......................... Attributes .......................... -->
      <var name="xml:lang" type="regex" cast="attribute">
        <pattern>[a-z]{2}(-[A-Z]{2})?</pattern>
        <label xml:lang="en">Language</label>
        <label xml:lang="fr">Langue</label>
        <description xml:lang="en">
          Language code such as "en", "fr" or "fr-FR".
        </description>
        <description xml:lang="fr">
          Code de langue tel que « en », « fr » or « fr-FR ».
        </description>
      </var>

      <var name="path" type="string" cast="attribute">
        <label xml:lang="en">Path to files</label>
        <label xml:lang="fr">Chemin vers les fichiers</label>
        <description xml:lang="en">
          Root path for files.
        </description>
        <description xml:lang="fr">
          Racine du chemin des fichiers.
        </description>
      </var>
      
      <var name="pi_fid" type="boolean" cast="attribute">
        <label xml:lang="en">File ID as PI</label>
        <label xml:lang="fr">Identifiant fichier en PI</label>
        <description xml:lang="en">
          File ID as a processing instruction (PI) for each assembled file.
        </description>
        <description xml:lang="fr">
          Identifiant en instruction de traitement (PI) pour chaque fichier
          assemblé.
        </description>
      </var>

      <var name="pi_source" type="boolean" cast="attribute">
        <label xml:lang="en">Source as PI</label>
        <label xml:lang="fr">Source en PI</label>
        <description xml:lang="en">
          Full path as a processing instruction (PI) for each assembled file.
        </description>
        <description xml:lang="fr">
          Chemin complet en instruction de traitement (PI) pour chaque fichier
          assemblé.
        </description>
      </var>

      <var name="xpath" type="string" cast="attribute">
        <label xml:lang="en">XPath for content</label>
        <label xml:lang="fr">XPath pour le contenu</label>
        <description xml:lang="en">
          XPath to extract the content of the file to use. It's exclusive with
          "xslt".
        </description>
        <description xml:lang="fr">
          XPath pour extraire le contenu du fichier à utiliser. C'est exclusif
          de « xslt ».
        </description>
      </var>
      
      <var name="xslt" type="string" cast="attribute">
        <label xml:lang="en">XSLT for content</label>
        <label xml:lang="fr">XSLT pour le contenu</label>
        <description xml:lang="en">
          XSL file to transform the content of the file to use. It's exclusive
          with "xpath".
        </description>
        <description xml:lang="fr">
          Fichier XSL pour transformer le contenu du fichier à utiliser. C'est
          exclusif de « xpath ».
        </description>
      </var>

      <var name="as" type="string" cast="attribute">
        <label xml:lang="en">Converted into</label>
        <label xml:lang="fr">Converti en</label>
        <description xml:lang="en">
          Conversion of the Publiset tag name into the target schema.
        </description>
        <description xml:lang="fr">
          Conversion du nom de la balise Publiset dans le schéma cible.
        </description>
      </var>

      <var name="attributes" type="string" cast="attribute">
        <label xml:lang="en">Attributes</label>
        <label xml:lang="fr">Attributs</label>
        <description xml:lang="en">
          Space separed attributes. --
          Example: version=1.0 xml:lang=en
        </description>
        <description xml:lang="fr">
          Attributs séparés par des espaces. --
          Exemple : version=1.0 xml:lang=fr
        </description>
      </var>

      <var name="transform" type="string" cast="attribute">
        <label xml:lang="en">XSLT for tag</label>
        <label xml:lang="fr">XSLT pour la balise</label>
        <description xml:lang="en">
          Conversion of the Publiset tag name into the target schema.
        </description>
        <description xml:lang="fr">
          Conversion du nom de la balise Publiset dans le schéma cible.
        </description>
      </var>

      <!-- ........................... Elements ........................... -->
      <!-- Usually not used for Publidoc, Publiquiz and derivated -->
    </group>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Corpus ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <group name="composition_corpus">
      <label xml:lang="en">Composition</label>
      <label xml:lang="fr">Composition</label>

      <var name="composition" type="text" class="editor" cast="composition"
           rows="30">
        <label xml:lang="en">Corpus</label>
        <label xml:lang="fr">Corpus</label>
      </var>
    </group>

    
    <!-- ============================ Selection =========================== -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Head ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <group name="selection_head">
      <label xml:lang="en">Head</label>
      <label xml:lang="fr">En-tête</label>
      
      <!-- .......................... Attributes .......................... -->
      <var name="xml:lang" type="regex" cast="attribute">
        <pattern>[a-z]{2}(-[A-Z]{2})?</pattern>
        <label xml:lang="en">Language</label>
        <label xml:lang="fr">Langue</label>
        <description xml:lang="en">
          Language code such as "en", "fr" or "fr-FR".
        </description>
        <description xml:lang="fr">
          Code de langue tel que « en », « fr » or « fr-FR ».
        </description>
      </var>

      <var name="path" type="string" cast="attribute">
        <label xml:lang="en">Path to files</label>
        <label xml:lang="fr">Chemin vers les fichiers</label>
        <description xml:lang="en">
          Root path for files.
        </description>
        <description xml:lang="fr">
          Racine du chemin des fichiers.
        </description>
      </var>

      <!-- ........................... Elements ........................... -->
      <var name="title" type="string" cast="inline" class="editor">
        <label xml:lang="en">Title</label>
        <label xml:lang="fr">Titre</label>
      </var>

      <var name="shorttitle" type="string" cast="inline" class="editor">
        <label xml:lang="en">Short title</label>
        <label xml:lang="fr">Titre court</label>
      </var>

      <var name="subtitle" type="string" cast="inline" class="editor">
        <label xml:lang="en">Subtitle</label>
        <label xml:lang="fr">Sous-titre</label>
      </var>

      <var name="identifier_ean" type="regex">
        <pattern>(\d{13})?</pattern>
        <label xml:lang="en">EAN identifier</label>
        <label xml:lang="fr">Identifiant EAN</label>
        <description xml:lang="en">13 digits.</description>
        <description xml:lang="fr">13 chiffres.</description>
      </var>

      <var name="identifier_uri" type="string">
        <label xml:lang="en">URI identifier</label>
        <label xml:lang="fr">Identifiant URI</label>
      </var>

      <var name="copyright" type="string" cast="simple_inline" class="editor">
        <label xml:lang="en">Copyright</label>
        <label xml:lang="fr">Copyright</label>
      </var>

      <var name="collection" type="string" cast="simple_inline" class="editor">
        <label xml:lang="en">Collection</label>
        <label xml:lang="fr">Collection</label>
      </var>

      <var name="contributors" type="text" cast="contributors" class="editor"
           rows="2">
        <label xml:lang="en">Contributors</label>
        <label xml:lang="fr">Contributeurs</label>
      </var>

      <var name="date" type="regex">
        <pattern>(\d{4}(-\d{2}(-\d{2})?)?)?</pattern>
        <label xml:lang="en">Date</label>
        <label xml:lang="fr">Date</label>
        <description xml:lang="en">ISO format: YYYY-MM-DD.</description>
        <description xml:lang="fr">Format ISO : AAAA-MM-JJ.</description>
      </var>

      <var name="source_book" type="text" cast="source_book" class="editor"
           rows="2">
        <label xml:lang="en">Book source</label>
        <label xml:lang="fr">Source livre</label>
      </var>

      <var name="source_file" type="text" cast="source_file" class="editor"
           rows="2">
        <label xml:lang="en">File source</label>
        <label xml:lang="fr">Source fichier</label>
      </var>

      <var name="keywordset" type="text" cast="keywordset" class="editor"
           rows="2">
        <label xml:lang="en">Keywords</label>
        <label xml:lang="fr">Mots clés</label>
      </var>

      <var name="subjectset" type="text" cast="subjectset" class="editor"
           rows="2">
        <label xml:lang="en">Subjects</label>
        <label xml:lang="fr">Thèmes</label>
      </var>

      <var name="abstract" type="text" cast="abstract" class="editor"
           rows="5">
        <label xml:lang="en">Abstract</label>
        <label xml:lang="fr">Résumé</label>
      </var>

      <var name="cover" type="regex">
        <pattern>([a-zA-Z0-9_-]+)?</pattern>
        <label xml:lang="en">Cover</label>
        <label xml:lang="fr">Couverture</label>
        <description xml:lang="en">
          ID of cover image (without extension).
        </description>
        <description xml:lang="fr">
          Identifiant de l'image de couverture (sans extension).
        </description>
      </var>
    </group>
    
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Corpus ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <group name="selection_corpus">
      <label xml:lang="en">Selection</label>
      <label xml:lang="fr">Sélection</label>

      <var name="selection" type="text" class="editor" cast="selection"
           rows="30">
        <label xml:lang="en">Corpus</label>
        <label xml:lang="fr">Corpus</label>
      </var>
    </group>

  </variables>
</publiforge>
