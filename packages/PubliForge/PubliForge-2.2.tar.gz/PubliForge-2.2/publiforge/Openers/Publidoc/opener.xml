<?xml version="1.0" encoding="utf-8"?>
<publiforge version="1.0">
  <opener>

    <label xml:lang="en">Publidoc XML</label>
    <label xml:lang="fr">XML Publidoc</label>

    <description xml:lang="en">
      Display and edit a Publidoc XML file.
    </description>
    <description xml:lang="fr">
      Affiche et édite un fichier XML Publidoc.
    </description>

    <module>publiforge.lib.opener.xml</module>

    <imports>
      <import to="RelaxNG/publidoc.rng">
        ../../Processors/PublidocValid/RelaxNG/publidoc.rng
      </import>
      <import to="Xsl">
        publiforge:Processors/Publidoc2XHtml/Xsl
      </import>
      <import to="Xsl">
        ../../Processors/Publidoc2Html5/Xsl
      </import>
      <import to="Static/Images">
        ../../Processors/Publidoc2XHtml/Templates/Images
      </import>
      <import to="Static/Images">
        ../../Processors/Publidoc2Html5/Templates/Images
      </import>
      <import to="Static/Css">
        ../../Processors/Publidoc2XHtml/Templates/Css
      </import>
      <import to="Static/Css">
        ../../Processors/Publidoc2Html5/Templates/Css
      </import>
      <import to="Static/Js">
        ../../Processors/Publidoc2XHtml/Templates/Js
      </import>
      <import to="Static/Js">
        ../../Processors/Publidoc2Html5/Templates/Js
      </import>
    </imports>

    <seeds>
      <seed>
        <file>Seeds/publidoc_document.xml</file>
        <label xml:lang="en">Publidoc XML ‒ Document</label>
        <label xml:lang="fr">XML Publidoc ‒ Document</label>
      </seed>

      <seed>
        <file>Seeds/publidoc_topic.xml</file>
        <label xml:lang="en">Publidoc XML ‒ Topic</label>
        <label xml:lang="fr">XML Publidoc ‒ Topic</label>
      </seed>

      <seed>
        <file>Seeds/publidoc_glossary.xml</file>
        <label xml:lang="en">Publidoc XML ‒ Glossary</label>
        <label xml:lang="fr">XML Publidoc ‒ Lexique</label>
      </seed>
    </seeds>

    <variables>
      <group-file>Variables/publidoc.pfvar.xml</group-file>
    </variables>

    <public>Static</public>

  </opener>
</publiforge>
